<h1><%= @quiz.name %></h1>

<div>
<%= form_for @user_options do |f| %>
<%= @quiz.questions.first.name %>

<%= f.collection_select :option_id, Option.where("id = '1' OR id = '2'"), :id, :name %>

<hr>
<%= @quiz.questions.second.name %>
<%= f.collection_select :option_id, Option.where("id = '3' OR id = '4'"), :id, :name %>
<hr>
<%= @quiz.questions.third.name %>
<%= f.collection_select :option_id, Option.where("id = '5' OR id = '6' OR id = '7' OR id = '8'"), :id, :name %>
</div>

<%= f.submit %>
<% end %>