<h1><%= @quiz.name %></h1>


<% if @quiz.id == 1 %>
  <%= form_for @user_options, :url => user_options_path(@user_options, :qid => @quiz.id), :html => {:method => :post} do |f| %>
    <%= @quiz.questions.first.name %>
    <%= f.collection_select :option_response_1, Option.where("id = '1' OR id = '2'"), :name, :name %>
    <hr>
    <%= @quiz.questions.second.name %>
    <%= f.collection_select :option_response_2, Option.where("id = '3' OR id = '4'"), :name, :name %>
