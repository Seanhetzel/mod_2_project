
<div class="wrapper">
  <div class="results">
  <p>Number of quizzes answered: <%= @response_record.size %></p>
    <% @response_record.reverse.each do |r| %>
      <h2><%= r.quiz.name %></h2>
      The question: <%= r.quiz.questions.first.name %><br><br>
      Your answer: <%= r.option_response_1 %><br>
      <br>
      The question: <%= r.quiz.questions.second.name %><br><br>
      Your answer: <%= r.option_response_2 %><br>
      <br>
      The question: <%= r.quiz.questions.third.name %><br><br>
      Your answer: <%= r.option_response_3 %>

      <h2>Result: <%= @quiz_result[0] %></h2> 
      <img src="<%= @quiz_result[1] %>"" width="600px">
      <hr>
      
    <% end %>
  </div>
</div>
