<%= stylesheet_link_tag "application.css" %>

<div class="wrapper">
<h2><%= flash[:message] %></h2>
<br><br>
<div class="credentials">
<%= form_for @user do |f| %>
  <%= f.label :username %>
  <%= f.text_field :username %>
  <br>
  <%= f.label :password %>
  <%= f.password_field :password %>
  <br>
  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %>
  <br>
  <%= f.submit %>
<% end %>
</div>
</div>